{
  "name": "errlop",
  "version": "1.1.1",
  "description": "An extended Error class that envelops a parent error, such that the stack trace contains the causation",
  "homepage": "https://github.com/bevry/errlop",
  "license": "MIT",
  "keywords": [
    "error",
    "nested",
    "nested-error",
    "nerror",
    "verror",
    "simple",
    "ono"
  ],
  "badges": {
    "list": [
      "travisci",
      "npmversion",
      "npmdownloads",
      "daviddm",
      "daviddmdev",
      "---",
      "patreon",
      "flattr",
      "liberapay",
      "thanksapp",
      "boostlab",
      "buymeacoffee",
